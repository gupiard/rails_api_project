<meta name="viewport" content="initial-scale=1.0, user-scalable=no">
<meta charset="utf-8">
<style>
  html, body, #map-canvas {
    height: 600px;
    width: 800px;
    margin: 0px;
    padding: 0px
  }
</style>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
<script>
  var map;
  function initialize() {
    var mapOptions = {
      zoom: 14,
      center: new google.maps.LatLng(<%= @the_latitude %>, <%= @the_longitude %>)
    };
    map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>


<div class="container">
  <h1>Forecast</h1>
  <p>The current temperature at <em><%= @the_address %></em> is <strong><%= @the_temperature %></strong> degrees.</p>
  <p>The outlook for the next hour is: <strong><%= @the_hour_outlook %></strong></p>
  <p>The outlook for the next day is: <strong><%= @the_day_outlook %></strong></p>

  <div id="map-canvas"></div>

</div>
